{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Login to VDS",
      "type": "shell",
      "command": "bash",
      "args": [
        "-c",
        "source .env && ssh ${VDS_USER}@${VDS_HOST}"
      ],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "panel": "new"
      },
      "group": "build"
    },
    {
      "label": "Deploy to VDS",
      "type": "shell",
      "command": "bash scripts/deploy-mcp.sh",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "isBackground": false,
      "problemMatcher": [],
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "dedicated"
      },
      "group": "build"
    },
    {
      "label": "Check VDS Status",
      "type": "shell",
      "command": "bash",
      "args": [
        "scripts/check-status.sh"
      ],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      },
      "group": "build"
    }
  ]
}